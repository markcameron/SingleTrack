<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.android.mcameron.singletrack"
      android:versionCode="1"
      android:versionName="1.0">
      
    
    <uses-sdk android:minSdkVersion="8" android:targetSdkVersion="14"/>
    <application android:name=".Globals"
        		 android:icon="@drawable/icon" 
        		 android:label="@string/app_name"
				>
        <activity android:name=".Menu"
                  android:label="@string/app_name"
                  android:screenOrientation="portrait"
            	android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity android:name=".StartGame">
		</activity>
		<activity android:name=".SingleTrackActivity"
		    	  android:screenOrientation="portrait"
            	  android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
		</activity>
		<activity android:name=".Help"
		          android:screenOrientation="portrait"
            	  android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
		</activity>
		<activity android:name=".Options"
		          android:screenOrientation="portrait"
            	  android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
		</activity>
		<activity android:name=".Credits">
		</activity>
		<activity android:name=".LevelSelectActivity"
		          android:screenOrientation="portrait"
		          android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
		</activity>
		<activity android:name=".PackSelectActivity"
		          android:screenOrientation="portrait"
		          android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
		</activity>
    </application>
    

</manifest> 